<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="20dp"
    app:cardElevation="15dp"
    android:outlineSpotShadowColor="#062165"
    android:outlineAmbientShadowColor="#062165"
    android:layout_marginTop="8dp"
    app:layout_constraintCircleRadius="8dp"
    android:layout_marginBottom="20dp"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    app:cardCornerRadius="20dp"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical"
        android:padding="8dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/ans"
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:text="Answer 1"
            android:textSize="18sp"
            android:layout_marginBottom="10dp"
            android:textStyle="bold"/>
        <TextView
            android:layout_below="@id/ans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textColorLink="#154DD6"
            android:text="LINK-"
            android:id="@+id/anslink"
            android:linksClickable="true"
            android:autoLink="web"
            android:textSize="14sp"/>
        <TextView
            android:layout_below="@id/anslink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="Owner name-"
            android:layout_marginTop="10dp"
            android:id="@+id/oname"
            android:textSize="12sp"/>
        <TextView
            android:layout_below="@id/oname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="Score-"
            android:layout_marginTop="10dp"
            android:id="@+id/score"
            android:textSize="12sp"/>
    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>